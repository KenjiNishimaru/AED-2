#include <stdio.h>
#include <stdlib.h>
int main()
{
    int N,G,i,R,S,*vet,pontos=0,indice=0,value,gap=1,a,diferenca,b;
    scanf("%d",&N);
    vet = malloc(N*sizeof(int));
    scanf("%d",&G);
 
    for(i=0;i<N;i++){
        scanf("%d",&S);
        scanf("%d",&R);
        if(S>R){ /// VITÃ“RIA
            pontos = pontos + 3;
        }
        else if(S == R && G>0){ /// EMPATE COM SALDO
                pontos = pontos + 3;
                G = G - 1;
             }
        else if(S == R && G == 0){ /// EMPATE SEM SALDO
                pontos = pontos + 1;
             }
        else if(R > S){  /// DERROTA
                diferenca = R - S;
                vet[indice] = diferenca;
                indice++;
             }
    }
 
        while(gap < indice) {
            gap = 3*gap+1;
        }
        while ( gap > 1) {
            gap /= 3;
            for(a = gap; a < indice; a++) {
                value = vet[a];
                b = a;
                while (b >= gap && value < vet[b - gap]) {
                    vet[b] = vet [b - gap];
                    b = b - gap;
                }
                vet [b] = value;
            }
        }
 
    for(i=0;i<indice;i++){
        if(G > vet[i]){
            pontos = pontos + 3;
            G = G - vet[i] - 1;
        }
        else if(G == vet[i]){
                pontos = pontos +1;
                G--;
             }
    }
    printf("%d",pontos);
    free(vet);
    return 0;
}
