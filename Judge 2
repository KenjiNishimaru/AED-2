#include <stdio.h>
#include <stdlib.h>
#define MAX 100

void insere(int vet[],int indice,int diferenca){
    vet[indice] = diferenca;
    printf("Entrou no vetor\n");
}

void ordenacao(int vet[], int indice){ /// BUBBLE SORT

    int a,b=indice,aux;
    for(a=0;a<indice-1;a++){
        for(b=a+1;b<indice;b++){
            if(vet[a]>vet[b]){
                aux=vet[a];
                vet[a]=vet[b];
                vet[b]=aux;
            }
        }
    }
}

int main()
{
    int N,G,i,R,S,vet[MAX],pontos=0,indice=0,diferenca;
    scanf("%d",&N);
    scanf("%d",&G);

    for(i=0;i<N;i++){
        scanf("%d",&S);
        scanf("%d",&R);
        if(S>R){ /// VITÃ“RIA
            pontos = pontos + 3;
        }
        else if(S == R && G>0){ /// EMPATE COM SALDO
                pontos = pontos + 3;
                G = G - 1;
             }
        else if(S == R && G == 0){ /// EMPATE SEM SALDO
                pontos++;
             }
        else if(R > S){  /// DERROTA
                diferenca = R - S;
                insere(vet,indice,diferenca);
                indice++;
             }
    }
    ordenacao(vet,indice);

    for(i=0;i<indice;i++){
        if(G > vet[i]){
            pontos = pontos + 3;
            G = G - vet[i] - 1;
        }
    }

    printf("%d",pontos);
    return 0;
}
